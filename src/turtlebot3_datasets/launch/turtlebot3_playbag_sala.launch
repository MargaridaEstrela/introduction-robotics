<launch>
  <!-- Arguments -->
  <arg name="model" default="waffle_pi"/>
  <arg name="workspace" default="$(find turtlebot3_datasets)"/>
  <arg name="map_file" default="$(arg workspace)/data/lsdc4_2.yaml"/>
  <arg name="bag_name" default="lsdc4_23_09"/>

  <!-- Turtlebot3 -->
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- TF -->
  <node pkg="tf2_ros" type="static_transform_publisher" name="static_tf_odom_to_map" args="0 0 0 0 0 0 odom map" />
  <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="static_tf_base_footprint_to_base_lin" args="0 0 0 0 0 0 1 base_footprint base_link" /> -->
  <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="static_tf_base_link_to_base_scan" args="0 0 0 0 0 0 1 base_link base_scan" /> -->

  <!-- ROSBAG -->
  <param name="/use_sim_time" value="true"/>
  <node pkg="rosbag" type="play" name="rosbag_player" 
          args="--clock $(find turtlebot3_datasets)/data/$(arg bag_name).bag"/>

  <!-- EKF robot localisation -->
  <node pkg="robot_localization" type="ekf_localization_node" name="robot_localization_ekf_node_odom" clear_params="true" output="screen">
    <rosparam command="load" file="$(find turtlebot3_datasets)/config/ekf_sala.yaml" />
  </node>

  <!-- AMCL-->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <param name="odom_frame_id" value="odom"/>
    <param name="odom_model_type" value="diff-corrected"/>
    <param name="base_frame_id" value="base_link"/>
    <param name="update_min_d" value="0.01"/>
    <param name="update_min_a" value="0.02"/>
    <param name="min_particles" value="500"/>
    <param name="max_particles" value="5000"/>
    <param name="initial_pose_x" value="-2.302"/>
    <param name="initial_pose_y" value="1.300"/>
    <param name="initial_pose_a" value="-3.054"/>
    <param name="laser_max_beams" value="30"/>
  </node>

  <!-- Estimated path -->
  <!-- <node pkg="turtlebot3_datasets" type="estimatedPath.py" name="turtlebot3_estimated_path"/> -->
  
  <!-- AMCL Path -->
  <node pkg="turtlebot3_datasets" type="amclPath.py" name="turtlebot3_amcl_path"/>

  <!-- Error Plot -->
  <!-- <node pkg="turtlebot3_datasets" type="RealTimeErrorPlot.py" name="turtlebot3_error_plot" output = "screen"/> -->

  <!-- Position error publisher -->

  <!-- rviz -->
  <node pkg="rviz" type="rviz" name="rviz" required="true" args= "-d $(arg workspace)/sala.rviz"/>

</launch>